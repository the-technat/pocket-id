{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:earlyMondays"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  customManagers: [
    {
      customType: 'regex',
      fileMatch: ["^fly\.toml$"],
      matchStrings: [
        "image = \'ghcr.io/pocket-id/pocket-id:(?<currentValue>.*?)\'\\n"
      ],
      packageNameTemplate: "ghcr.io/pocket-id/pocket-id",
      datasourceTemplate: "docker",
    },
  ],
}
