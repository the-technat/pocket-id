{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'schedule:earlyMondays',
  ],
  lockFileMaintenance: {
    enabled: true,
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^fly.toml$/',
      ],
      matchStrings: [
        "image = 'ghcr.io/pocket-id/pocket-id:(?<currentValue>.*?)'\\n",
      ],
      packageNameTemplate: 'ghcr.io/pocket-id/pocket-id',
      datasourceTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      matchUpdateTypes: ["minor", "patch"],
      matchCurrentVersion: "!/^0/",
      automerge: true
    }
  ],
}
